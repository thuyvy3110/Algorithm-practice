/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
class Solution {
    List<String> btpList;
    public List<String> binaryTreePaths(TreeNode root) {
        btpList = new ArrayList<String>();
        return rootToLeaf(root, "");
    }
    
    List<String> rootToLeaf(TreeNode root, String btp) {
        if(root == null)
            return btpList;
        if (root.left == null && root.right == null)
            btpList.add(btp + root.val);
        else{
            btp += root.val;
            btp += "->";
            
            rootToLeaf(root.left, btp);
            rootToLeaf(root.right, btp);
        }
        return btpList;
    } 
}
